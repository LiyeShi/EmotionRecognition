<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/activity_control"
    android:background="#F5D670">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="234dp">
            <!--中心imageView-->
            <ImageView
                android:id="@+id/iv_wave"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_gravity="center"
                android:background="@drawable/shape_circle_red" />
            <!--中间的imageView-->
            <ImageView
                android:id="@+id/iv_wave_1"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_gravity="center"
                android:background="@drawable/shape_circle_red" />
            <!--最外层imageView-->
            <ImageView
                android:id="@+id/iv_wave_2"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_gravity="center"
                android:background="@drawable/shape_circle_blue" />
        </FrameLayout>
        <TextView
            android:layout_width="120dp"
            android:layout_height="55dp"
            android:text="正常"
            android:textSize="30sp"
            android:id="@+id/tv_tips"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/corn_tv"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="vertical"
        android:background="@drawable/corn_layout"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ip:"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:layout_marginLeft="20dp"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                style="@style/InputBoxStyle">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:id="@+id/edit_tcpClientIp"
                    android:textColor="@color/black"
                    style="@style/EditTextStyle"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:inputType="date"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Potr:"
                android:textColor="@color/black"
                android:textSize="30sp"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                style="@style/InputBoxStyle">
                <EditText
                    android:id="@+id/edit_tcpClientPort"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textColor="@color/black"
                    style="@style/EditTextStyle"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:inputType="number"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/finally_"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="10dp"
                android:id="@+id/btn_tcpClientConn"
                android:text="连接"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/finally_"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="30dp"
                android:id="@+id/btn_tcpClientClose"
                android:text="断开"/>
        </LinearLayout>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/corn_tv_rec"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/lyclean"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="接收到的信息（长按清空）："
                android:layout_marginLeft="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:id="@+id/txt_ClientRcv"
                android:textColor="@color/black"
                android:paddingLeft="8dp" />
        </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看实时情况"
            android:background="@drawable/finally_"
            android:id="@+id/btn_camera"
            android:layout_marginBottom="10dp"
            android:layout_centerInParent="true"/>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
           >

            <com.nightonke.boommenu.BoomMenuButton
                android:id="@+id/bmb"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="bottom|end"
                app:bmb_buttonEnum="textOutsideCircle"
                app:bmb_piecePlaceEnum="piecePlace_dot_3_1"
                app:bmb_buttonPlaceEnum="buttonPlace_sc_3_1"
                app:bmb_boomInWholeScreen="true"
                />
        </FrameLayout>
    </RelativeLayout>
</LinearLayout>


